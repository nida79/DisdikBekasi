<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.absensi.FormAbsensiActivity">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        app:autoFocusButtonColor="@color/white"
        app:autoFocusButtonVisible="true"
        app:flashButtonColor="@color/white"
        app:flashButtonVisible="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/abu_soft" />

    <TextView
        android:id="@+id/tv_succes_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:fontFamily="@font/dosis_bold"
        android:text="@string/scan_berhasil"
        android:textAlignment="viewEnd"
        android:textColor="@color/hijau"
        android:textSize="@dimen/_13ssp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_5sdp">

        <LinearLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/dosis_bold"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="@string/status"
                    android:textSize="@dimen/_14ssp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/result_status_scan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/dosis_bold"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="@string/status"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/dosis_bold"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="@string/pukul"
                    android:textSize="@dimen/_14ssp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/result_time_scan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/dosis_bold"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="@string/_10_00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/dosis_bold"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="Tanggal"
                    android:textSize="@dimen/_14ssp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/result_date_scan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/dosis_bold"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="22-10-2021"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/dosis_bold"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="@string/keterangan"
                    android:textSize="@dimen/_14ssp"
                    tools:ignore="RtlSymmetry" />
                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/wfh_wfo"/>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</LinearLayout>